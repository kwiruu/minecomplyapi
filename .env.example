# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=3000
GLOBAL_PREFIX=api
APP_NAME=MineComply API
APP_DESCRIPTION=MineComply compliance management backend

# CORS Origins - Add your local IP here if testing from mobile devices
# Format: http://localhost:3000,http://YOUR_LOCAL_IP:3000,http://localhost:19006
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# ==========================================
# DATABASE (SUPABASE POSTGRES)
# ==========================================
# Get these from Supabase Dashboard > Settings > Database
# Use the pooled connection for the application runtime
DATABASE_URL=postgresql://postgres.<PROJECT_REF>:<PASSWORD>@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres?sslmode=require&pgbouncer=true&connection_limit=1
# Use the direct connection for migrations and long-lived operations
DIRECT_DATABASE_URL=postgresql://postgres:<PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres?sslmode=require

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://<PROJECT_REF>.supabase.co
SUPABASE_ANON_KEY=<YOUR_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<YOUR_SERVICE_ROLE_KEY>

# Get these from Supabase Dashboard > Settings > Auth > JWT Settings
SUPABASE_JWKS_URL=https://<PROJECT_REF>.supabase.co/auth/v1/keys
SUPABASE_JWT_SECRET=<YOUR_JWT_SECRET_FROM_JWT_KEYS_SECTION>

# ==========================================
# SUPABASE STORAGE
# ==========================================
SUPABASE_STORAGE_BUCKET=minecomplyapp-bucket
SUPABASE_STORAGE_UPLOADS_PATH=uploads
